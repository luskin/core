{
  "name": "core",
  "private": true,
  "workspaces": [
    "apps/*",
    "tooling/*",
    "packages/*"
  ],
  "scripts": {
    "add:api": "pnpm add --filter api",
    "add:libs": "pnpm add --filter @core/libs",
    "add:utils": "pnpm add --filter @core/utils",
    "add:web": "pnpm add --filter web",
    "add:worker": "pnpm add --filter worker",
    "build": "turbo build",
    "build:api": "turbo build --filter api",
    "build:packages": "turbo build --filter=./packages/*",
    "build:web": "turbo build --filter web",
    "build:worker": "turbo build --filter worker",
    "clean": "./scripts/clean.sh",
    "codegen": "pnpm -r --filter api run codegen",
    "db:migrate": "pnpm -r --filter api run migrate",
    "dev": "turbo dev",
    "dev:api": "turbo dev --filter api",
    "dev:local": "turbo dev --filter local",
    "dev:utils": "turbo dev --filter @core/utils",
    "dev:web": "turbo dev --filter web --filter api",
    "docker": "docker compose up",
    "docker:nuke": "docker ps -q | awk '{print $1}' | xargs -o docker stop",
    "docker:start-clean": "yarn docker:nuke && docker compose up --force-recreate -V",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo lint",
    "remove:api": "pnpm remove --filter api",
    "remove:libs": "pnpm remove --filter @core/libs",
    "remove:utils": "pnpm remove --filter @core/utils",
    "remove:web": "pnpm remove --filter web",
    "remove:worker": "pnpm remove --filter worker",
    "start": "turbo start",
    "start:api": "turbo start --filter api",
    "start:web": "turbo start --filter web",
    "test:utils": "turbo test --filter @core/utils",
    "ui:firebase": "open http://127.0.0.1:9098/auth"
  },
  "devDependencies": {
    "@tooling/eslint": "*",
    "@tooling/prettier": "*",
    "@tooling/typescript": "*",
    "turbo": "^1.12.4"
  },
  "engines": {
    "node": ">=20.9.0"
  }
}
