{
  "name": "core",
  "private": true,
  "scripts": {
    "-----CLEAN-----": "-----CLEAN-----",
    "clean": "turbo clean && rm -rf node_modules .turbo && pnpm i",
    "-----DEPENDENCY MANAGEMENT-----": "-----DEPENDENCY MANAGEMENT-----",
    "add:web": "pnpm add --filter web",
    "add:docs": "pnpm add --filter docs",
    "add:backend": "pnpm add --filter backend",
    "add:ui": "pnpm add --filter @core/ui",
    "add:utils": "pnpm add --filter @core/utils",
    "remove:docs": "pnpm remove --filter docs",
    "remove:web": "pnpm remove --filter web",
    "-----BUILD-----": "-----BUILD-----",
    "build": "turbo build",
    "build:web": "turbo build --filter web",
    "build:docs": "turbo build --filter docs",
    "build:backend": "turbo build --filter backend",
    "build:packages": "turbo build --filter=./packages/*",
    "-----DEVELOPMENT-----": "-----DEVELOPMENT-----",
    "docker:nuke": "docker ps -q | awk '{print $1}' | xargs -o docker stop",
    "docker:start-clean": "yarn docker:nuke && docker compose up --force-recreate -V",
    "docker": "docker compose up",
    "dev": "turbo dev",
    "dev:api": "turbo dev --filter backend -- -c api/nest-cli.json",
    "dev:web": "turbo dev --filter web --filter api",
    "dev:docs": "turbo dev --filter docs",
    "ui:firebase": "open http://127.0.0.1:9098/auth",
    "db:migrate": "pnpm -r --filter backend run migrate",
    "-----START-----": "-----START-----",
    "start": "turbo start",
    "start:web": "turbo start --filter web",
    "start:docs": "turbo start --filter docs",
    "start:api": "turbo start --filter api",
    "----FORMAT-----": "----FORMAT-----",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "-----TEST-----": "-----TEST-----",
    "test:utils": "turbo test --filter @core/utils"
  },
  "devDependencies": {
    "@configs/eslint": "workspace:*",
    "@configs/typescript": "workspace:*",
    "prettier": "^3.1.0",
    "turbo": "^1.11.3"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=20.9.0"
  }
}
