{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm build:api",
    "watchPatterns": ["apps/api/**/*"]
  },
  "deploy": {
    "startCommand": "pnpm start:api",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "sleepApplication": false
  }
}
