{
  "name": "api",
  "version": "0.0.1",
  "description": "Core Mothership API",
  "author": "Motheship Technologies, Inc.",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "-----BUILD-----": "-----BUILD-----",
    "build": "nest build",
    "codegen": "yarn script api/openapi/main.internal.ts",
    "migration:generate": "yarn drizzle-kit generate:pg",
    "migrate": "yarn script libs/database/migrate.ts",
    "-----DEV-----": "-----DEV-----",
    "script": "npx ts-node -r tsconfig-paths/register",
    "dev": "nest start --watch",
    "dev:debug": "nest start --debug --watch",
    "-----START-----": "-----START-----",
    "start": "nest start",
    "start:api": "node dist/main.js",
    "-----FORMAT-----": "-----FORMAT-----",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "-----TEST-----": "-----TEST-----",
    "test": "jest"
  },
  "dependencies": {
    "@core/backend": "*",
    "@core/modules": "*",
    "@core/utils": "*",
    "@mothership/nest": "0.1.7",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.3.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.17",
    "amqplib": "^0.10.3",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.3",
    "firebase-admin": "^12.0.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@7nohe/openapi-react-query-codegen": "^0.5.2",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.102",
    "@tooling/eslint": "*",
    "@tooling/typescript": "*",
    "@tooling/webpack": "*",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "drizzle-kit": "^0.20.10",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
